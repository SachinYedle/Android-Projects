    android:columnCount="3"
    android:rowCount="6"
    tools:context="com.example.admin1.viewsassignment.TextviewAttributes">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:text="ems"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="10px"
        android:text="width"/>

    <TextView
        android:layout_width="20px"
        android:layout_height="wrap_content"
        android:text="layout_width"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
